<!DOCTYPE html>
<html>
<head>
    <title>{{ post.title }} - {{ site.name }}</title>
    <link rel="stylesheet" href="{{ site.theme.link }}/assets/css/lnb.min.css">
    <script src="{{ site.theme.link }}/assets/js/utils.js"></script>
</head>
<body>
    <div id="app">

        {% include 'view/Navbar.twig' %}
        <div class="container-fluid p-3">

            <!-- Title -->
            <div class="fs-1 mb-3">
                <span class="fw-bold">Article</span>
                <span class="text-primary pacifico-font">Content</span>
            </div>

            <!-- Content -->
            <article class="article-content p-4 shadow rounded bg-white">
                <header class="article-header text-center mb-4">
                    <h1 class="article-title display-4 text-primary">{{ post.title }}</h1>
                    <p class="article-meta text-muted">
                        Published on {{ post.date('F j, Y') }} by <strong>{{ post.author.name }}</strong>
                    </p>
                </header>

                <div class="article-body">
                    {{ post.content }}
                </div>

                <footer class="article-footer mt-4 pt-3 border-top">
                    <div class="categories mb-2">
                        <span class="font-weight-bold">Categories: </span>
                        {% for category in post.terms('category') %}
                            <a href="{{ category.link }}" class="badge badge-secondary">{{ category.name }}</a>
                        {% endfor %}
                    </div>

                    <div class="tags">
                        <span class="font-weight-bold">Tags: </span>
                        {% for tag in post.terms('post_tag') %}
                            <a href="{{ tag.link }}" class="badge badge-info">{{ tag.name }}</a>
                        {% endfor %}
                    </div>
                </footer>
            </article>
        
        </div>

        {% include 'view/Footer.twig' %}
    </div>
</body>
</html>
