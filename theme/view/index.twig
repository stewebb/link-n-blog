<!DOCTYPE html>
<html>
<head>
    <title>{{ site.name }}</title>
    <link rel="stylesheet" href="{{ site.theme.link }}/style.css">
</head>
<body>
    <div id="app">
        {% include 'view/Navbar.twig' %}

        <div class="container-fluid">

            <!-- Hero Section -->
            <div class="p-3 mb-3">
                {{ hero | raw }}
            </div>

            <div class="row">
                {% for link in links %}
                    <div class="col-xl-3 col-lg-4 col-sm-6 menu-col">
                        <div class="link-item p-1">

                            <!-- Image -->
                            <div class="banner-container">
                                <img src="{{ link.image_url }}" alt="{{ link.text }}">
                            </div>

                            <!-- Overlay when hovered -->
                            <div class="overlay"
                                onmouseover="this.style.backgroundColor='{{ link.boxBgColor }}';"
                                onmouseout="this.style.backgroundColor='';"
                            >
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-outline-{{ link.btnBgColor }}">
                                        Visit
                                    </button>
                                    <button type="button" class="btn btn-outline-{{ link.btnBgColor }}">
                                        About
                                    </button>
                                    <button type="button" class="btn btn-outline-{{ link.btnBgColor }}">
                                        Share
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>



        </div>

        {% include 'view/Footer.twig' %}
    </div>

